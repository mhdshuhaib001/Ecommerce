                    <% if (OrderData.length > 0) { %>
                      <% OrderData.forEach((order, index) => { %>
                        <tr>
                          <td><%= index + 1 %></td>
                          <td><%= order.orderId %></td>
                          <td><%= order.purchaseDate.toDateString() %></td>
                          <td><%= order.totalAmount %></td>
                          <td><%= order.status %></td>
                          <td><a href="/admin/orderSummery?_id=<%= order._id %>">View</a></td>
                        </tr>
                      <% }); %>
                    <% } else { %>
                      <tr>
                        <td colspan="6" style="text-align: center;">No orders</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
