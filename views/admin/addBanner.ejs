<%- include('../layouts/admin/header.ejs') -%>

<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <br>
      <br>
      <br>
      <h1 class="card-title">Add Banner</h1>
      <p class="card-description"> Add Banner form</p>
      <form action="/admin/addBanner" class="forms-sample" method="post" enctype="multipart/form-data" onsubmit="return validateForm()">
        <div class="form-group">
          <label for="exampleInputName1">Banner Title</label>
          <input type="text" class="form-control" id="exampleInputName1" name="title" placeholder="Title" style="color: white;" >
          <span id="titleError" style="color: rgb(206, 41, 41);"class="error"></span>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail3">Description</label>
          <input type="text" class="form-control" id="exampleInputEmail3" name="description" placeholder="Description" style="color: white;" >
          <span id="descriptionError" style="color: red;"class="error"></span>
        </div>

        <div class="col-lg-3 col-md-6 rounded-image-preview">
          <label for="imageInputBanner" class="image-label">
            <div class="rounded-image-preview">
              <img id="imagePreviewBanner" src="/admin/assets/images/dashboard/add Image.webp" alt="Preview" />
            </div>
            <input name="image" type="file" accept="image/*" id="imageInputBanner" class="imageInput" onchange="previewImageBanner(this)" >
          </label>
          <span id="imageError" style="color: red;"class="error"></span>
        </div>

        <br>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
      </form>
    </div>
  </div>
</div>
  

<%- include('../layouts/admin/footer.ejs') -%>