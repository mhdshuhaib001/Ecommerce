<%-include("../layouts/admin/header.ejs")%>

        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-lg-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Product Management</h4>
                    <p class="card-description"> All Mazia Products</p>
                    <p><a href="/admin/loadaddproduct" class="badge badge-success"> + Add Product </a></p>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>No.</th>
          
                            <th>Name</th>
                            <th>Images</th>
                            <th>Category</th>
                            <th>Stock</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Block</th>
                            <th>Edit</th>
                            <!-- <th>Delete</th> -->
                          </tr>
                        </thead>
                        <tbody>
                            <% if(productData.length>0){
                                for(let i=0;i<productData.length;i++){  %>
                              <tr>
                                <td><%= i+1 %></td>
                                
                                <td><%= productData[i].name %></td>
                                <td>
                                  <img src="/products/images/<%= productData[i].images.image1 %>" alt="" class="square-image">
                                </td>
                                <td><%= productData[i].category %></td>
                                <td><%= productData[i].quantity %></td>
                                <td><%= productData[i].price %></td>
                                <%  if(productData[i].blocked==0){ %>
                                <td class="text-success">Active</td>
                                <td onclick="productBlock('<%= productData[i]._id %>')"><a class="badge badge-danger" >Unlink</a></td>
                               <% }else{ %>
                                <td class="text-danger">Blocked</td>
                                <td onclick="productBlock('<%= productData[i]._id %>')"><a  class="badge badge-success" >Link</a></td>
                              <% } %>
                                <td><a href="/admin/edit-product-page?id=<%= productData [i]._id %>" class="badge badge-warning">Update</a></td>
                                
                                 <td><a href="/admin/delete-product?id=<%= productData [i]._id %>"><button class="btn-inverse-danger">Delete</button></a></td> 
                              </tr>
                              <% } %>
                              <% }else{ %>
                                <tr>
                                    <td colspan="5">Products Not Found</td>
                                  </tr>
                             <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
        <script>
          function productBlock(proId) {
            console.log(proId)
            swal
              .fire({
                title: "Are You Sure?",
                text:"Are you sure",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes",
                cancelButtonText: "cancel",
              })
              .then((result) => {
                if (result.isConfirmed) {
                  $.ajax({
                    url: "/admin/block-product",
                    data: {
                      proId: proId,
                    },
                    method: "post",
                    success: (response) => {
                      if ((response.remove = true)) {
                        location.reload();
                        swal.fire({
                          title: "Done",
                          text: "suSuscces",
                          icon: "Suscces",
                          timer: 1500,
                          showConfirmButton: false,
                        });
                      }
                    },
                  });
                }
              });
          }
        </script>
     
     <%-include("../layouts/admin/footer.ejs")%>
