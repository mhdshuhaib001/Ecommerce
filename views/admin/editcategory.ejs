<%-include("../layouts/admin/header.ejs")%>



  <div class="main-panel">
    <div class="content-wrapper">
      <div class="col-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Update Category</h4>

            <form action="/admin/editCategory?id=<%= category._id %>" method="post" class="forms-sample">
              <div class="form-group">
                <label for="exampleInputName1">Updated Category Name</label>
                <input name="categoryName" type="text" class="form-control" id="exampleInputName1"
                  value="<%= category._id %>" required>
              </div>

              <button type="submit" class="btn btn-primary mr-2">Update Category</button>
              <% if(typeof message !=='undefined' ){ %>
                <span id="er2" style="color: rgb(241, 7, 7); text-align: center">
                  <%= message %>
                </span>
                <% } %>

            </form>
          </div>
        </div>
      </div>
    </div>

    <%-include("../layouts/admin/footer.ejs")%>