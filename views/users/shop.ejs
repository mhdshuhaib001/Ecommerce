    <script>
        function addToCart(productId) {

            $.ajax({
                url: "/addToCart",
                method: "post",
                data: {
                    id: productId,
                },
                success: (response) => {
                    if (response.login == true) {
                        swal
                            .fire({
                                icon: "warning",
                                title: "Please Login",
                                confirmButtonColor: "#3085d6",
                                confirmButtonText: "Login",
                                showCancelButton: true,
                                cancelButtonColor: "#d33",
                                text: response.message,
                            })
                            .then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = "/loadLogin";
                                }
                            });
                    } else if (response.success) {
                        swal.fire({
                            position: "center",
                            icon: "success",
                            title: "Product added to cart",
                            showConfirmButton: false,
                            timer: 1500,
                        });
                        $("#cartDiv").load("/ #cartDiv");
                    } else {
                        swal.fire({
                            icon: "error",
                            title: "Sorry ! Out of stock. ",
                            text: response.message,
                        });
                    }
                },
            });
        }



        function addToCart(productId) {

            $.ajax({
                url: "/addToCart",
                method: "post",
                data: {
                    id: productId,
                },
                success: (response) => {
                    if (response.login == true) {
                        swal
                            .fire({
                                icon: "warning",
                                title: "Please Login",
                                confirmButtonColor: "#3085d6",
                                confirmButtonText: "Login",
                                showCancelButton: true,
                                cancelButtonColor: "#d33",
                                text: response.message,
                            })
                            .then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = "/loadLogin";
                                }
                            });
                    } else if (response.success) {
                        swal.fire({
                            position: "center",
                            icon: "success",
                            title: "Product added to cart",
                            showConfirmButton: false,
                            timer: 1500,
                        });
                        $("#cartDiv").load("/ #cartDiv");
                    } else {
                        swal.fire({
                            icon: "error",
                            title: "Sorry ! Out of stock. ",
                            text: response.message,
                        });
                    }
                },
            });
        }
    </script>











