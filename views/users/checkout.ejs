    <script>

        $("#checkout-form").submit(function (e) {
            e.preventDefault();
            console.log('check this');

            console.log($("#total1").text().trim());

            const total = $("#total1").text().trim();
            var formDataArray = $(this).serializeArray();
            formDataArray.push({ name: 'total', value: total });

            console.log(formDataArray, 'checking form data');
            $.ajax({
                url: "/placeOrder",
                method: "post",
                data: formDataArray,
                success: (response) => {
                    if (response.codsuccess == true) {
                        location.href = `/orderSuccess/${response.orderid}`;
                    } else if (response.stock) {
                        location.reload();
                    } else if (response.placed == true) {
                        window.location.href = '/orderSuccess';
                    }
                },
            });
        });


    </script>







