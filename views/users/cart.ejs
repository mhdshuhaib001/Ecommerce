        <script>







            function removeItem(proId) {
                swal
                    .fire({
                        title: "Are You Sure?",
                        Text: " You wont be able to revert this!",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#3085d6",
                        cancelButtonColor: "#d33",
                        confirmButtonText: "Yes, delete it!",
                        cancelButtonText: "cancel",
                    })
                    .then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                url: "/removeCartItem",
                                data: {
                                    product: proId,
                                },
                                method: "post",
                                success: (response) => {
                                    if ((response.success)) {
                                        swal.fire({
                                            title: "Deleted!",
                                            text: "Your item has been deleted.",
                                            icon: "success",
                                            timer: 1500,
                                            showConfirmButton: false,
                                        }).then(() => {
                                            location.reload();
                                        });
                                    }
                                },
                            });
                        }
                    });
            }


            function changeQuantity(userId, proId, count) {
                console.log("changeQuantity triggered");
                console.log("userId:", userId);
                console.log("proId:", proId);
                console.log("count:", count);
                $.ajax({
                    url: "/quantityUpdate",
                    data: {
                        user: userId,
                        product: proId,
                        count: count
                    },
                    method: "post",
                    success: (response) => {
                        console.log(response, 'responce check 0--------------');

                        if (response.success) {
                            $("#reloadDiv").load("/cart #reloadDiv");
                        } else if (response.check) {
                            swal.fire({
                                icon: "error",
                                title: "Oops...",
                                text: "Out of stock",
                            });
                        } else {
                            swal.fire({
                                position: "center",
                                icon: "warning",
                                text: response.message,
                                timer: 1500,
                                showConfirmButton: false,
                            });
                        }
                    },
                    error: (error) => {
                        console.log(error);
                    },
                })
            }

        </script>
